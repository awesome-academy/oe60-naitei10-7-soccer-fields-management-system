<% provide(:title, t("password_resets.edit.reset_password")) %>
<h1><%= t("password_resets.edit.reset_password") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/errors_valid", object: f.object %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("password_resets.edit.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("password_resets.edit.update_password"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
