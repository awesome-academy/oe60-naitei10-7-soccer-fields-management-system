<div class="site-section bg-dark m-5 p-0">
  <div class=" col-12 ">
    <div class="row mb-5">
      <div class="col-lg-12 p-0 rounded">
        <div class="widget-next-match rounded">
          <div class="widget-title">
            <h3><%= t("field_types.booking_time") %></h3>
          </div>
          <div>
            <% booking_hours(@bookings).each do |time| %>
              <div class="<%= "btn btn-#{time[:booked] ? "danger" : "white"} col-2 m-2" %>">
                <%= button_to "#{time[:start_time]} - #{time[:end_time]}", field_type_path(@field_type), method: :put, params: {
                  start_time: time[:start_time],
                  end_time: time[:end_time],
                  field_type_id: @field_type.id,
                }, class: "btn btn-white" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 ">
    <h5 class="mb-3">*<%= t("field_types.note") %></h5>
    <p class="btn btn-danger mr-2"><%= t("field_types.inavailable_time_slots") %></p>
    <p class="btn btn-white"><%= t("field_types.available_time_slots") %></p>
  </div>
  <div class="col-4 m-auto">
    <h1 class="text-center"><%= t("field_types.field_infomation") %></h1>
    <div class="card">
      <img src="<%= asset_path("img_1.jpg") %>" alt="Image" class=" card-img-top" style="height: 150px; object-fit: cover">
      <div class="card-body">
        <h5 class="card-title text-black"><%= @field_type.field_type_name %></h5>
        <p class="card-text"><%= @field_type.field_description %></p>
        <p class="card-text"><%= @field_type.field_address %></p>
        <p class="card-text"><%= @field_type.field_phone_number %></p>
        <p class="card-text"><%= "#{map_with_time_of_day(@field_type.prices).price} #{Settings.CERRENCY}" %></p>
      </div>
    </div>
  </div>
</div>
